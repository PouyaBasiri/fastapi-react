services:
  db:
    image: postgres:15
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: admin
      POSTGRES_DB: surin
    volumes:
      - pgdata:/var/lib/postgresql/data
    networks: [appnet]

  backend:
    build: ./backend
    environment:
      DATABASE_URL: postgresql+psycopg2://admin:admin@db:5432/surin
      SECRET_KEY: change-this
    depends_on: [db]
    ports:
      - "9000:9000"
    networks: [appnet]

  frontend:
    build: ./frontend
    depends_on: [backend]
    ports:
      - "5174:80"
    networks: [appnet]

volumes:
  pgdata:
networks:
  appnet:
